@model Packt.Shared.Category;
@{
    ViewData["Title"] = Model.CategoryName;
}
<h2>Category</h2>
<hr/>
<div>
    <dl class="dl-horizontal">
        <dt>Category ID</dt>
        <dd>@Model.CategoryID</dd>
        <dt>Category Name</dt>
        <dd>@Model.CategoryName</dd>
        <dt>Category Description</dt>
        <dd>@Model.Description</dd>
    </dl>

    <img class="d-block w-100" src="~/images/category@(Model.CategoryID).jpeg" alt="@Model.CategoryName" />
</div>
